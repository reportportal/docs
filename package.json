{
  "name": "documentation",
  "version": "2.0.0",
  "description": "ReportPortal Documentation",
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "npm run re-gen && docusaurus start",
    "build": "docusaurus build",
    "lint": "eslint src/**/*.{js,jsx}",
    "format": "npm run lint -- --fix",
    "swizzle": "docusaurus swizzle",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "gen-api-docs": "docusaurus gen-api-docs",
    "clean-api-docs": "docusaurus clean-api-docs",
    "gen-api-docs:version": "docusaurus gen-api-docs:version",
    "clean-api-docs:version": "docusaurus clean-api-docs:version",
    "gen-all": "docusaurus gen-api-docs all && docusaurus gen-api-docs:version serviceApi:all && docusaurus gen-api-docs:version serviceUat:all",
    "clean-all": "docusaurus clean-api-docs all && docusaurus clean-api-docs:version serviceApi:all && docusaurus clean-api-docs:version serviceUat:all",
    "re-gen": "npm run clean-all && npm run gen-all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reportportal/documentation.git"
  },
  "author": "ReportPortal.io",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/reportportal/documentation/issues"
  },
  "homepage": "https://github.com/reportportal/documentation#readme",
  "dependencies": {
    "@docusaurus/core": "^3.1.1",
    "@docusaurus/preset-classic": "^3.1.1",
    "@mdx-js/react": "3.0.0",
    "clsx": "^2.0.0",
    "docusaurus-plugin-openapi-docs": "3.0.0-beta.5",
    "docusaurus-theme-openapi-docs": "3.0.0-beta.5",
    "dotenv": "^16.3.1",
    "prism-react-renderer": "^2.3.1",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "yet-another-react-lightbox": "^3.15.6"
  },
  "devDependencies": {
    "@docusaurus/eslint-plugin": "^3.1.1",
    "@docusaurus/module-type-aliases": "^3.1.1",
    "@docusaurus/types": "^3.1.1",
    "docusaurus-mdx-checker": "^3.0.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.1"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0"
  }
}
